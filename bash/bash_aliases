### Alias

# Comunes
alias c='clear'
alias ll='ls -l'

# Atajos Mac
alias flushdns='dscacheutil -flushcache'

# Rails
alias brake='bundle exec rake'
alias be='bundle exec'
alias ber='bundle exec rspec'
alias rs='bundle exec rails server'
alias rsd='bundle exec rails server --debugger'
alias rc='bundle exec rails console'
alias rg='bundle exec rails generate '
alias migrate='bundle exec rake db:migrate && bundle exec rake db:test:prepare'
alias deploy='bundle exec cap deploy'
alias deploym='bundle exec cap deploy:migrate'

# Git
alias gs='git status'
alias gp='git pull'
alias gps='git push'
alias ga='git add -A .'
alias gc='git commit'
alias gca='git commit -a'
alias gb='git branch'
alias gd='git diff'
alias gcb='git checkout -b'

# Tmux
alias tks='tmux kill-session -t '

# Docker & boot2docker
alias dockerenv='eval `boot2docker shellinit 2>/dev/null`'

