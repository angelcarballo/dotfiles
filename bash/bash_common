# Paths common to all platforms
export PATH="$HOME/bin:$HOME/src/dotfiles/bin:$HOME/.rbenv/bin:$PATH"

# Vim everywhere
set -o vi
export EDITOR=vim

# Enable rbenv
if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi # Enable shims and autocompletion add to your profile:

# List colors
export CLICOLOR=1
export LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx

# Prompt colors
YELLOW="\[\033[0;33m\]"
GREEN="\[\033[0;32m\]"
WHITE='\e[0;37m'

# Get current branch name if any
function parse_git_branch {
  ref=$(git symbolic-ref HEAD 2> /dev/null) || return
  echo "("${ref#refs/heads/}")"
}

# Prompt
PS1="$WHITE\h:\w$YELLOW\$(parse_git_branch)$WHITE $ "

# # Enable dircolors and related aliases
# # test -e ~/.dircolors && eval `dircolors -b ~/.dircolors`
# alias ls='ls --G=auto'
# alias dir='dir --G=auto'
# alias vdir='vdir --G=auto'
# alias grep='grep --G=auto'
# alias fgrep='fgrep --G=auto'
# alias egrep='egrep --G=auto'


# Load aliases
if [ -f ~/.bash_aliases ]; then
  source ~/.bash_aliases
fi

